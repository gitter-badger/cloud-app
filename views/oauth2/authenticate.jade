extends ../layout

block content
    div.container.oauth2-container
        p Hi #{user.username},
        p
            b #{oauth2Client.name} 
            | is requesting access to your account.
        p Do you approve?
        form(action="/oauth2/authorize/decision" method="post")
            input(name="transaction_id" type="hidden" value="#{transactionID}")
            div
                button(class="btn btn-lg btn-success btn-block" type="submit" value="Allow" id="allow") Allow
                button(class="btn btn-lg btn-danger btn-block" type="submit" value="Deny" name="cancel" id="deny") Deny